<Page x:Class="DailyProject.MyDebug.DebugPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DailyProject.MyDebug"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DebugPage">

    <Grid Background="#FF323232">
        <ScrollViewer>
            <StackPanel Margin="10,10,10,10">
                <Button Click="OnClickDebugButton1">DebugButton1</Button>
                <Separator Opacity="0" Height="10"/>

                <Button Click="OnClickDebugButton2">DebugButton2</Button>
                <Separator Opacity="0" Height="10"/>

                <Button Click="OnClickDebugButton3">DebugButton3</Button>
                <Separator Opacity="0" Height="10"/>

                <Label Content="DebugLabel"  Foreground="White"/>
                <TextBlock Text=" - DebugTextBlock" TextWrapping="Wrap" Foreground="White" Background="#FF141414" MinHeight="60" Padding="5,5,5,5" FontSize="18"/>
                <Separator Opacity="0" Height="10"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
